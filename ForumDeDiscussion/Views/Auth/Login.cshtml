@model ForumDeDiscussion.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Login Page";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h2 class="card-title">Se connecter</h2>
                </div>
                <div class="card-body">
                    <form asp-action="Login">
                        <div class="form-group mb-3">
                            <label asp-for="Email" class="form-label">Adresse email</label>
                            <input asp-for="Email" type="email" class="form-control" placeholder="Enter your email">
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Password"></label>
                            <input asp-for="Password" type="password" class="form-control" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <button type="submit" class="btn btn-primary">Se connecter</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
