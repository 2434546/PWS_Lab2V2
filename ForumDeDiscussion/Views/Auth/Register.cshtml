@model ForumDeDiscussion.ViewModels.RegisterViewModel
@{
    ViewData["Title"] = "Register Page";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h2 class="card-title">S'inscrire</h2>
                </div>
                <div class="card-body">
                    <form asp-action="Register" asp-controller="Auth" method="post">
                        <div class="form-group mb-3">
                            <label asp-for="Name" class="form-label">Nom</label>
                            <input asp-for="Name" class="form-control" placeholder="Enter your name">
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="Firstname" class="form-label">Prénom</label>
                            <input asp-for="Firstname" class="form-control" placeholder="Enter your firstname">
                            <span asp-validation-for="Firstname" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="UserName" class="form-label">Nom d'utilisateur</label>
                            <input asp-for="UserName" class="form-control" placeholder="Enter a username">
                            <span asp-validation-for="UserName" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="Email" class="form-label">Adresse email</label>
                            <input asp-for="Email" type="email" class="form-control" placeholder="Enter your email">
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="Password" class="form-label">Mot de passe</label>
                            <input asp-for="Password" type="password" class="form-control" placeholder="Create a password">
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <button type="submit" class="btn btn-primary">S'inscrire</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
